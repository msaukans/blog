<!DOCTYPE html>
<html>
<head>
  <title>Elegant Man</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>

<div id = "banner">
	<%=image_tag("logo.png", :alt => "Logo Missing", :size => "200x80") %>
</div>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar" >
      <ul class="nav navbar-nav">
        <li class="active" ><%=link_to "Home", pages_home_path %></li>
			<li><%=link_to "Categories", categories_path  %></li>
			<li><%=link_to "Articles", articles_path  %></li>
			<li><%=link_to "About", pages_about_path %></li>

			<% if !logged_in? %>
			<li><%= link_to "Login In", login_path %></li>
		<% else %>
			<li>Logged in as <%= @current_user.name %></li>
			<li><%= link_to "Log Out", logout_path %></li>
		<% end %>
      </ul>
      
    </div>
  </div>
</nav>
  



<% flash.each do|key, value| %>
	<div class="flash <%= key%>">
		<%=value %>
	</div>
<% end %>
<%= yield %>



</body>
</html>